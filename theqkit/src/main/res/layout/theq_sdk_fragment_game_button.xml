<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    tools:background="@color/theq_sdk_color_accent"
    >

  <ProgressBar
      android:id="@+id/choiceProgress"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="@id/choiceText"
      app:layout_constraintBottom_toBottomOf="@id/choiceText"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:progressDrawable="@drawable/theq_sdk_progress_bar_selected"
      tools:progress="33"
      android:progressDrawable="@drawable/theq_sdk_progress_bar_transparent"
      android:progress="0"
      style="?android:attr/progressBarStyleHorizontal"
      android:layout_margin="1dp"
      />

  <ImageView
      android:id="@+id/choiceImage"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      app:srcCompat="@drawable/theq_sdk_correct_selected"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginLeft="16dp"
      android:paddingRight="8dp"
      android:visibility="gone"
      tools:visibility="visible" />

  <TextView
      android:id="@+id/choiceText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toRightOf="@id/choiceImage"
      app:layout_constraintRight_toLeftOf="@id/plusOne"
      android:paddingRight="8dp"
      android:paddingLeft="16dp"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"
      android:textColor="@color/theq_sdk_white"
      android:textStyle="bold"
      tools:text="Sample Choice"
      />

  <TextView
      android:id="@+id/responsesText"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:gravity="center_vertical"
      android:paddingRight="16dp"
      android:textColor="@color/theq_sdk_white"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@id/choiceText"
      app:layout_constraintTop_toTopOf="@id/choiceText"
      app:layout_constraintRight_toRightOf="parent"
      tools:text="256"
      />

  <ImageView
      android:id="@+id/plusOne"
      android:layout_width="24dp"
      android:layout_height="24dp"
      app:layout_constraintRight_toLeftOf="@id/responsesText"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginEnd="8dp"
      android:visibility="invisible"
      />

  <me.zhanghai.android.materialprogressbar.MaterialProgressBar
      android:id="@+id/submitProgress"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:indeterminate="true"
      app:mpb_progressStyle="circular"
      style="@style/Widget.MaterialProgressBar.ProgressBar.Small"
      app:mpb_indeterminateTint="@color/theq_sdk_choice_progress_tint"
      app:mpb_useIntrinsicPadding="false"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginEnd="8dp"
      android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>